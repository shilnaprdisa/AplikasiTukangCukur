<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserKangcukurActivity">

    <ImageView
        android:id="@+id/bg_blue"
        android:layout_width="match_parent"
        android:layout_height="548dp"
        android:background="@drawable/bg_round_top"
        android:backgroundTint="@color/blue_600"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/arrow_left"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"/>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingEnd="16dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/logoitem" />
                    <ImageView
                        android:id="@+id/img_kangcukur"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:layout_toLeftOf="@id/logo"
                        android:layout_marginTop="15dp"
                        android:foregroundGravity="center"
                        android:src="@drawable/textbiru" />
                    <TextView
                        android:id="@+id/slogan"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Mari Kita Cukur"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_below="@id/img_kangcukur"
                        android:layout_toLeftOf="@id/logo"
                        android:textAlignment="center"
                        />
                </RelativeLayout>
            </com.google.android.material.appbar.MaterialToolbar>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/listkangcukurheader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:text="Daftar KangCukur"
                android:textColor="@color/blue_600"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:paddingHorizontal="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_list_kangcukur1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="8dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginVertical="10dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/foto_kangcukur"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginVertical="10dp"
                            android:src="@drawable/ic_user_circle_black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginVertical="10dp"
                            android:layout_marginStart="20dp">
                            <TextView
                                android:id="@+id/namaKangcukur"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="Budi"
                                android:textSize="20dp"
                                android:layout_marginStart="5dp"/>
                            <TextView
                                android:id="@+id/umurKangcukur"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="20 Tahun"
                                android:textSize="16sp"
                                android:layout_marginStart="5dp"
                                />
                            <TextView
                                android:id="@+id/pengalamanKangcukur"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="1 Tahun"
                                android:textSize="16sp"
                                android:layout_marginStart="5dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_list_kangcukur2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="8dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginVertical="10dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/foto_kangcukur2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginVertical="10dp"
                            android:src="@drawable/ic_user_circle_black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginVertical="10dp"
                            android:layout_marginStart="20dp">
                            <TextView
                                android:id="@+id/namaKangcukur2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="Ali"
                                android:textSize="20dp"
                                android:layout_marginStart="5dp"/>
                            <TextView
                                android:id="@+id/umurKangcukur2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="23 Tahun"
                                android:textSize="16sp"
                                android:layout_marginStart="5dp"
                                />
                            <TextView
                                android:id="@+id/pengalamanKangcukur2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="2 Tahun"
                                android:textSize="16sp"
                                android:layout_marginStart="5dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_list_kangcukur3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="8dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginVertical="10dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/foto_kangcukur3"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginVertical="10dp"
                            android:src="@drawable/ic_user_circle_black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginVertical="10dp"
                            android:layout_marginStart="20dp">
                            <TextView
                                android:id="@+id/namaKangcukur3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="Jule"
                                android:textSize="20dp"
                                android:layout_marginStart="5dp"/>
                            <TextView
                                android:id="@+id/umurKangcukur3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="25 Tahun"
                                android:textSize="16sp"
                                android:layout_marginStart="5dp"
                                />
                            <TextView
                                android:id="@+id/pengalamanKangcukur3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="3 Tahun"
                                android:textSize="16sp"
                                android:layout_marginStart="5dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>