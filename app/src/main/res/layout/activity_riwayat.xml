                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text=":"
                                    android:textSize="16sp"
                                    android:layout_marginStart="5dp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text=":"
                                    android:textSize="16sp"
                                    android:layout_marginStart="5dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text=":"
                                    android:textSize="16sp"
                                    android:layout_marginStart="5dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginVertical="10dp"
                                android:layout_marginStart="10dp">
                                <TextView
                                    android:id="@+id/tglhistory2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text="11-08-2022"
                                    android:textSize="16sp"
                                    android:layout_marginStart="5dp"/>
                                <TextView
                                    android:id="@+id/namahistory2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text="Jule"
                                    android:textSize="16sp"
                                    android:layout_marginStart="5dp"
                                    />
                                <TextView
                                    android:id="@+id/pakethistory2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text="Paket  3"
                                    android:textSize="16sp"
                                    android:layout_marginStart="5dp"/>
                                <TextView
                                    android:id="@+id/hargahistory2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text="60000"
                                    android:textSize="16sp"
                                    android:layout_marginStart="5dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="8dp"
                        app:cardCornerRadius="8dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:scaleType="centerCrop" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginVertical="10dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginVertical="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text="Tanggal pesan"
                                    android:textSize="16sp"
                                    android:layout_marginStart="5dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text="Kang cukur"
                                    android:textSize="16sp"
                                    android:layout_marginStart="5dp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text="Paket"
                                    android:textSize="16sp"
                                    android:layout_marginStart="5dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text="Harga"
                                    android:textSize="16sp"
                                    android:layout_marginStart="5dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginVertical="10dp"
                                android:layout_marginStart="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text=":"
                                    android:textSize="16sp"
                                    android:layout_marginStart="5dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text=":"
                                    android:textSize="16sp"
                                    android:layout_marginStart="5dp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text=":"
                                    android:textSize="16sp"
                                    android:layout_marginStart="5dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text=":"
                                    android:textSize="16sp"
                                    android:layout_marginStart="5dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginVertical="10dp"
                                android:layout_marginStart="10dp">
                                <TextView
                                    android:id="@+id/tglhistory1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text="11-05-2022"
                                    android:textSize="16sp"
                                    android:layout_marginStart="5dp"/>
                                <TextView
                                    android:id="@+id/namahistory1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text="Ali"
                                    android:textSize="16sp"
                                    android:layout_marginStart="5dp"
                                    />
                                <TextView
                                    android:id="@+id/pakethistory1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text="Paket  2"
                                    android:textSize="16sp"
                                    android:layout_marginStart="5dp"/>
                                <TextView
                                    android:id="@+id/hargahistory1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text="50000"
                                    android:textSize="16sp"
                                    android:layout_marginStart="5dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </ScrollView>
            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/navBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:itemHorizontalTranslationEnabled="true"
                app:labelVisibilityMode="selected"
                android:layout_alignParentBottom="true"
                app:menu="@menu/nav_bottom_user" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>